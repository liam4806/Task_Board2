<%- include('./layout/header')%> <%- include('./layout/navbar')%>
<link rel="stylesheet" href="/css/projectler.css">
  <div class="adding-container">
    <h2>Add a New Project</h2>
    <form class="form-add" action="/add/add-project-to-db" method="post">
      <!-- Just a demo for adding a task-->
      <!-- Task creation-->
      <div class="form-group">
        <label for="project-title">Title:</label>
        <input type="text" id="project-title" name="pjname" required />
      </div>
      <div class="form-group">
        <label for="project-title">Category:</label>
        <input type="text" id="project-title" name="category" required />
      </div>
      <div class="form-group">
        <label for="project-description">Description:</label>
        <textarea
        name="description"
        id="project-description"
        cols="20"
        rows="6"
        placeholder="This is the description of the project"
      ></textarea>
        </div>
        <div class="form-group">
            <label for="startdate">Start Date:</label>
            <input type="date" class="form-date" id="startdate" name="startdate">
        </div>
        <div class="form-group">
            <label for="enddate">End Date:</label>
            <input type="date" class="form-date" id="enddate" name="enddate">
        </div>
      </div> 
      <input type="hidden" name="teamid" value="<%=teamid%>" />
      <input type="submit" value="Create Project" class="button" />
    </form>
    <!-- Seperated it into a differnet form-->
  </div>
</main>
<script>
  const today = new Date().toLocaleDateString();
  document.getElementById('startdate').value = today;
  document.getElementById('enddate').value = today;
</script>
