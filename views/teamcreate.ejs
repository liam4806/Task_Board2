<%- include('./layout/header')%>
    <%- include('./layout/navbar')%>
    <link rel="stylesheet" href="/css/projectler.css">
    <div>
        <form action="/add/team" method="POST" class="teamcreate" id="add-users">  
            <div class="team-creation">
                <h2>Create Team</h2>
            <div class="form-group">
                <label for="team_name">Team Name:</label>
                <textarea class="textarea" name="team_name" id="team_name" cols="30" rows="3" placeholder="Enter Team name" required></textarea>
            </div>
            <div class="form-group">
          <h5>Add users</h5>
          <label for="team-members">Select Team Members:</label>
          <select name="userarray" id="team-members" multiple required>
            <% userdata.forEach(user=>{%> 
                <option value="<%=user._id%>"><%= user.name %></option>
                <%}); %>
          </select>
        </div>
            <input type="submit" value="Create" class="button">
        </div></form>
    </div>
    <script src="/js/user-mutli-select.js"></script>
<%-include( './layout/footer')%>